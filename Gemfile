	# Bundler doesn't seem to handle these properly.  It still has a tendency to disregard
	gem 'wdm'
	gem 'pry', :platforms => [:mswin, :mingw], :git => 'https://github.com/pry/pry.git'

	gem 'guard'
	gem 'guard-compass'
	gem 'guard-bundler'
end
